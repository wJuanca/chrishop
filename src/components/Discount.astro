  <style>
    .gift-bag-container {
    animation: floatIn 0.8s cubic-bezier(0.17, 0.67, 0.83, 0.67) forwards;
  }
  
  .gift-bag {
    transform-origin: top center;
    animation: swayBag 8s ease-in-out infinite;
  }
  
    .handle-wrapper {
      position: absolute;
      top: -25px; /* Agarradero m√°s arriba */
      left: 0;
      right: 0;
      height: 40px;
      display: flex;
      justify-content: center;
      z-index: 1;
    }
  
    .single-handle {
      width: 60px;
      height: 100%;
      border: 5px solid #ff47a8;
      border-bottom: none;
      border-radius: 30px 30px 0 0;
      animation: handleSway 8s ease-in-out infinite; /* Sincronizado con el movimiento de la bolsa */
      background: transparent; /* Sin relleno */
    }
  
    .bag-body {
      background: linear-gradient(135deg, #ff69b4, #ff1493);
      border: 3px solid rgba(255, 255, 255, 0.2);
      position: relative;
      overflow: hidden;
    }
  
    .bag-top {
      height: 30px;
      background: linear-gradient(135deg, #ff8dc2, #ff47a8);
      position: relative;
      overflow: hidden;
    }
  
    .bag-ruffle {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 8px;
      background: repeating-linear-gradient(
        45deg,
        rgba(255,255,255,0.3),
        rgba(255,255,255,0.3) 5px,
        transparent 5px,
        transparent 10px
      );
      animation: ruffleWave 2s linear infinite;
    }
  
    .shine-effect {
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(
        45deg,
        transparent,
        rgba(255, 255, 255, 0.1),
        transparent
      );
      animation: shine 3s infinite;
    }
  
    .sparkle {
      position: absolute;
      font-size: 1.2rem;
      opacity: 0;
      animation: twinkle 2s infinite;
    }
  
    /* Posiciones de estrellas y flores */
    .sparkle1 { top: 20%; left: 10%; animation-delay: 0s; }
    .sparkle2 { top: 40%; right: 15%; animation-delay: 0.7s; }
    .sparkle3 { bottom: 30%; left: 20%; animation-delay: 1.4s; }
    .sparkle4 { top: 25%; right: 20%; animation-delay: 0.3s; }
    .sparkle5 { bottom: 40%; right: 25%; animation-delay: 1s; }
    .sparkle6 { bottom: 20%; left: 15%; animation-delay: 1.7s; }
  
    .gift-tag {
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
  
    .discount-code {
      position: relative;
      animation: pulseScale 2s infinite;
    }
  
    .glow-text {
      text-shadow: 0 0 10px rgba(255,255,255,0.7);
      animation: glowPulse 2s infinite;
    }
  
    /* Animaciones */
    @keyframes floatIn {
      0% {
        opacity: 0;
        transform: translateY(-100%) scale(0.8);
      }
      70% {
        transform: translateY(-40%) scale(1.05);
      }
      100% {
        opacity: 1;
        transform: translateY(-50%) scale(1);
      }
    }
  
    @keyframes swayBag {
      0%, 100% { transform: rotate(-1.5deg); } /* Reducido el √°ngulo de balanceo */
      50% { transform: rotate(1.5deg); }
    }
  
    @keyframes handleSway {
      0%, 100% { transform: rotate(-3deg); }
      50% { transform: rotate(3deg); }
    }
  
    @keyframes shine {
      0% { transform: translateX(-100%) rotate(45deg); }
      100% { transform: translateX(100%) rotate(45deg); }
    }
  
    @keyframes twinkle {
      0%, 100% { opacity: 0; transform: scale(0.5); }
      50% { opacity: 1; transform: scale(1.2); }
    }
  
    @keyframes ruffleWave {
      0% { background-position: 0 0; }
      100% { background-position: 20px 0; }
    }
  
    @keyframes pulseScale {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
  
    @keyframes glowPulse {
      0%, 100% { text-shadow: 0 0 10px rgba(255,255,255,0.7); }
      50% { text-shadow: 0 0 20px rgba(255,255,255,0.9), 0 0 30px rgba(255,255,255,0.7); }
    }
  
    /* Responsive */
    @media (max-width: 640px) {
      .gift-bag-container {
        width: 200px;
      }
      
      .single-handle {
        width: 50px;
      }
    }
  </style>