<div class="main-content">
    <!-- barra de busqueda y los botones de las categorias -->
    <div class="search-bar">
        <input type="text" class="search-input" placeholder="Buscar..." />
        <div class="category-buttons">
            <button class="category active" data-category="all">Todos</button>
            <button class="category" data-category="ramo">Ramos</button>
            <button class="category" data-category="caja">Cajas</button>
            <button class="category" data-category="canasta">Canastas</button>
            <button class="category" data-category="otros">Otros</button>
        </div>
    </div>
</div>

<style>
    .main-content {
        margin-top: 130px; 
    }
    .search-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 2rem 0;
        gap: 1rem;
        width: 100%;
        flex-wrap: wrap;
    }

    .search-input {
        padding: 0.5rem;
        font-size: 1rem;
        width: 300px;
        border-radius: 20px;
        border: 1px solid #ccc;
        margin-bottom: 1rem; 
    }

    .category-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .category {
        padding: 0.5rem 1rem;
        border: none;
        background-color: #fce7ed;
        cursor: pointer;
        border-radius: 5px;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .category.active {
        background-color: #f2a7be;
        color: #fff;
    }

    @media (max-width: 768px) {
        .search-input {
            width: 90%;
            max-width: 400px;
        }
    }
</style>
