                        const currentState = heartIcon.getAttribute('data-liked') === 'true';
                        
                        if (currentState) {
                            // Con esta seccion quitamos el like
                            heartIcon.src = heartOffSrc;
                            heartIcon.setAttribute('data-liked', 'false');
                            localStorage.removeItem(`product-like-${productId}`);
                        } else {
                            //Damos like al producto
                            heartIcon.src = heartOnSrc;
                            heartIcon.setAttribute('data-liked', 'true');
                            localStorage.setItem(`product-like-${productId}`, 'true');
                        }
                    });
                }
            });
        });
